<?xml version="1.0" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
 
    <targets>
        <target name="file" xsi:type="File"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}| action: ${aspnet-mvc-action}" 
            fileName="${basedir}/logs/Planthor_Client_BackendWebapp-${shortdate}.log" 
            keepFileOpen="true"
            encoding="utf-8" />
        <target name="consoleLog" xsi:type="Console"
            layout="${longdate} ${logger} ${message}${exception:format=ToString}"
            encoding="utf-8" />
    </targets>
 
    <rules>
        <logger name="*" minlevel="Debug" writeTo="file" />
        <logger name="*" minlevel="Trace" writeTo="consoleLog"/>
    </rules>
</nlog>